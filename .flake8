[flake8]
# Configuración de flake8 para linting

# Longitud máxima de línea
max-line-length = 100

# Archivos y directorios a ignorar
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    logs

# Errores a ignorar
# E203: whitespace before ':'
# E501: line too long (manejado por black)
# W503: line break before binary operator
ignore = E203,E501,W503

# Complejidad ciclomática máxima
max-complexity = 10
